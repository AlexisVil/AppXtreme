<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!--Bancos-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tiBanco"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:hint="Banco"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxStrokeColor="@color/xtreme_3"
            app:boxStrokeWidth="2dp"
            app:helperText="Banco"
            app:helperTextEnabled="true"
            app:helperTextTextAppearance="@style/Widget.MaterialComponents.Button.TextButton"
            app:helperTextTextColor="@color/letters_2"
            app:hintTextColor="@color/design_default_color_on_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/etBanco"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false" />
        </com.google.android.material.textfield.TextInputLayout>
        <!--Tipo transferencia-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tiDeposito"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:layout_toEndOf="@+id/tiBanco"
            android:hint="Tipo déposito"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxStrokeColor="@color/xtreme_3"
            app:boxStrokeWidth="2dp"
            app:helperText="Tipo de Déposito"
            app:helperTextEnabled="true"
            app:helperTextTextAppearance="@style/Widget.MaterialComponents.Button.TextButton"
            app:helperTextTextColor="@color/letters_2"
            app:hintTextColor="@color/design_default_color_on_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/etDeposito"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false" />
        </com.google.android.material.textfield.TextInputLayout>
        <!--Referencia-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tiRef"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tiBanco"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:hint="Ingrese referencia"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxStrokeColor="@color/xtreme_3"
            app:boxStrokeWidth="2dp"
            app:helperText="Referencia"
            app:helperTextEnabled="true"
            app:helperTextTextAppearance="@style/Widget.MaterialComponents.Button.TextButton"
            app:helperTextTextColor="@color/letters_2"
            app:hintTextColor="@color/design_default_color_on_primary">

            <EditText
                android:id="@+id/etRef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Fecha-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tiFecha"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tiDeposito"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:layout_toEndOf="@+id/tiRef"
            android:hint="Seleccione Fecha"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxStrokeColor="@color/xtreme_3"
            app:boxStrokeWidth="2dp"
            app:helperText="Fecha"
            app:helperTextEnabled="true"
            app:helperTextTextAppearance="@style/Widget.MaterialComponents.Button.TextButton"
            app:helperTextTextColor="@color/letters_2"
            app:hintTextColor="@color/design_default_color_on_primary">

            <EditText
                android:id="@+id/etFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Monto-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tiMonto"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tiRef"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:hint="Ingrese una cantidad"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxStrokeColor="@color/xtreme_3"
            app:boxStrokeWidth="2dp"
            app:helperText="Monto"
            app:helperTextEnabled="true"
            app:helperTextTextAppearance="@style/Widget.MaterialComponents.Button.TextButton"
            app:helperTextTextColor="@color/letters_2"
            app:hintTextColor="@color/design_default_color_on_primary"
            app:prefixText="$">

            <EditText
                android:id="@+id/etMonto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Recarga-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tiRecarga"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tiRef"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_toEndOf="@+id/tiMonto"
            android:hint="$"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxStrokeColor="@color/xtreme_3"
            app:boxStrokeWidth="2dp"
            app:helperText="Recarga"
            app:helperTextEnabled="true"
            app:helperTextTextAppearance="@style/Widget.MaterialComponents.Button.TextButton"
            app:helperTextTextColor="@color/letters_2"
            app:hintTextColor="@color/design_default_color_on_primary"
            app:prefixText="$">

            <EditText
                android:id="@+id/etRecarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Servicios-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tiServicios"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tiFecha"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_toEndOf="@+id/tiRecarga"
            android:hint="$"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxStrokeColor="@color/xtreme_3"
            app:boxStrokeWidth="2dp"
            app:helperText="Servicios"
            app:helperTextEnabled="true"
            app:helperTextTextAppearance="@style/Widget.MaterialComponents.Button.TextButton"
            app:helperTextTextColor="@color/letters_2"
            app:hintTextColor="@color/design_default_color_on_primary"
            app:prefixText="$">

            <EditText
                android:id="@+id/etServicios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Btn Reportar Pago-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReportar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tiFecha"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="62dp"
            android:layout_toEndOf="@+id/tiServicios"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="@string/btn_pago"
            android:textColor="@android:color/white"
            android:visibility="visible"
            app:cornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>