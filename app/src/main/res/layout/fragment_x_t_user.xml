    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragmentUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragmentTitleUser"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/tvOperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            tools:text="ID"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="48dp"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btnSaldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_shadow"
            android:text="@string/btn_saldo"
            android:textAllCaps="false"
            android:textColor="@color/letters_2"
            android:textSize="16dp"
            app:backgroundTint="#ffffff" />

        <Button
            android:id="@+id/btnPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/btn_shadow"
            android:text="@string/btn_pago"
            android:textAllCaps="false"
            android:textColor="@color/letters_2"
            android:textSize="16dp"
            app:backgroundTint="#ffffff" />

        <Button
            android:id="@+id/btnVentas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnCerrar"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/btn_shadow"
            android:text="@string/btn_ventas"
            android:textAllCaps="false"
            android:textColor="@color/letters_2"
            android:textSize="16dp"
            app:backgroundTint="#ffffff" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/btn_shadow"
            android:text="@string/btnLogout"
            android:textAllCaps="false"
            android:textColor="@color/letters_2"
            android:textSize="16dp"
            app:backgroundTint="#ffffff" />
    </LinearLayout>

