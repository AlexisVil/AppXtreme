<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    tools:context=".main.user.ui.XTUserFragment">
    <!--GuideLines-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideMidVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideMidHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.28" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.76" />
    <!--Views-->
    <!--Image User-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivAccount"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_user_account"
        app:layout_constraintEnd_toEndOf="@id/guideMidVertical"
        app:layout_constraintStart_toStartOf="@id/guideStart"
        app:layout_constraintTop_toTopOf="@id/guideTop" />
    <!--PDV-->
    <TextView
        android:id="@+id/tvTitlePdv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragmentTitleUser"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideMidHorizontal"
        app:layout_constraintEnd_toStartOf="@id/tvOperator"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/guideStart"
        app:layout_constraintTop_toBottomOf="@id/guideImage"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/tvOperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/guideMidHorizontal"
        app:layout_constraintEnd_toStartOf="@id/guideEnd"
        app:layout_constraintStart_toEndOf="@id/tvTitlePdv"
        app:layout_constraintTop_toBottomOf="@id/guideImage"
        app:layout_constraintVertical_bias="0.1"
        tools:text="PDV" />

    <!--ID PDV-->
    <TextView
        android:id="@+id/tvTitleIdPDV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_idpdv"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/guideMidHorizontal"
        app:layout_constraintEnd_toStartOf="@id/tvIdPDV"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/guideStart"
        app:layout_constraintTop_toBottomOf="@id/tvTitlePdv"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/tvIdPDV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@id/guideMidHorizontal"
        app:layout_constraintEnd_toStartOf="@id/guideEnd"
        app:layout_constraintStart_toEndOf="@id/tvTitleIdPDV"
        app:layout_constraintTop_toBottomOf="@id/tvOperator"
        app:layout_constraintVertical_bias="0.3"
        tools:text="ID" />

    <!--Saldo Actual-->
    <TextView
        android:id="@+id/tvTitleSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/avaliable"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/guideMidVertical"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/guideStart"
        app:layout_constraintTop_toBottomOf="@id/tvTitleIdPDV" />
    <!--Recargas-->
    <TextView
        android:id="@+id/tvTitleSaldoRecarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Recargas:"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/tvTitleSaldoServicios"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/guideStart"
        app:layout_constraintTop_toBottomOf="@id/guideMidHorizontal" />

    <!--Servicios-->
    <TextView
        android:id="@+id/tvTitleSaldoServicios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Servicios:"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/guideEnd"
        app:layout_constraintStart_toEndOf="@id/tvTitleSaldoRecarga"
        app:layout_constraintTop_toBottomOf="@id/guideMidHorizontal"
        />

    <!--API Recarga-->
    <TextView
        android:id="@+id/tvSaldoRecarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        tools:text="0.00"
        app:layout_constraintTop_toBottomOf="@id/tvTitleSaldoRecarga"
        app:layout_constraintStart_toEndOf="@id/guideStart"
        app:layout_constraintEnd_toStartOf="@id/tvSaldoServicios"
        />
    <!--API Recarga-->
    <TextView
        android:id="@+id/tvSaldoServicios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitleSaldoServicios"
        app:layout_constraintStart_toEndOf="@id/tvSaldoRecarga"
        app:layout_constraintEnd_toStartOf="@id/guideEnd"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        tools:text="0.00" />


    <!--Btn Reportar Pago-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPago"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:text="@string/btn_pago"
        android:textAllCaps="false"
        android:textColor="#5E6168"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:backgroundTint="@color/xtreme_2"
        app:cornerRadius="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvSaldoServicios"
        app:layout_constraintStart_toEndOf="@id/guideMidVertical"
        app:layout_constraintEnd_toStartOf="@id/guideEnd"
        />

    <!--Btn Ventas Recientes-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVentas"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/btn_ventas"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:icon="@drawable/ic_sells"
        app:strokeColor="@color/xtreme_3"
        app:strokeWidth="3dp"
        app:layout_constraintTop_toTopOf="@id/guideButtons"
        app:layout_constraintBottom_toBottomOf="@id/guideBottom"
        app:layout_constraintStart_toStartOf="@id/guideStart"
        app:layout_constraintEnd_toStartOf="@id/btnLogout"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintVertical_bias="0.3"
        />
    <!--Btn Cerrar SesiÃ³n-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/btnLogout"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:icon="@drawable/ic_logout"
        app:strokeColor="@color/xtreme_3"
        app:strokeWidth="3dp"
        app:layout_constraintTop_toTopOf="@id/guideButtons"
        app:layout_constraintBottom_toBottomOf="@id/guideBottom"
        app:layout_constraintEnd_toEndOf="@id/guideEnd"
        app:layout_constraintStart_toEndOf="@id/btnVentas"
        app:layout_constraintVertical_bias="0.3"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>